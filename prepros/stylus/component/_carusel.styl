.carusel {
  width: 100%;
  height: 500px;
}


.carusel-inner {
  width: 100%;
  overflow: hidden;
  flex-shrink: 0;
  display: flex;
  position: relative;
  height: 100%;
}

.carusel-item{
  width: 100%;
  height: 100%;
  transform: translateX(100%);
  position: absolute;
  // z-index: -1;
}

.carusel-item img {
  width: 100%;
  height: 100%;
}


.vista {
  transform: translateX(0);
}

.go-out {
  animation: go-out 3s forwards;
}

.get-in {
  // z-index: 1;
  animation: get-in 3s forwards;
}

@keyframes get-in {
  0% {
    transform: translateX(100%);
  }

  100% {
    transform: translateX(0);
  }
}

@keyframes go-out {
  0% {
    transform: translateX(0%);
  }

  100% {
    transform: translateX(-100%);
  }
}

.transparent {
  opacity: 0;
}





