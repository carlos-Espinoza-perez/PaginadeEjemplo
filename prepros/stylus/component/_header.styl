colorNew = #6eff00

header 
    height 60px
    background: linear-gradient(to right, colorOscuro, colorPrimario)
    position: fixed
    z-index 5
    width 100%
    top: 0

    .menu
        display: none


    nav 
        height 100%
        display: flex
        justify-content: space-between
        align-items: center

        ol
            display: flex
            padding-left: 13px
            margin: 0
            
            a
                margin-left: 20px 
                color: colorClaro
                font-size: 14px

                &:hover
                    text-decoration: none
                    color: #222

                &:nth-child(1)
                    margin-left: 0

                &:last-child
                    margin-right: 20px
