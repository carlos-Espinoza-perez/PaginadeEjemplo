strong
  font-weight: 900

.opacity
    display inline-block !important
    transition: .8s
    background-color: rgba(00,00,00, .3)


.cajas-opacity 
  height 100vh
  position: fixed
  z-index 1
  top: 0
  width: 100%
  display: none

.cajas
    z-index 2
    width: 100%
    height 100vh
    display: flex
    justify-content: center
    position fixed
    top: 0
    display: none
    

.pregunta
    margin: auto;
    width: 300px;
    height: 175px;
    align-items: center;
    text-align: center;
    padding: 1px;
    border-radius: 10px;
    border: 1px solid colorClaro;
    color: colorClaro

    .text
        margin: 30px auto;
        width: 129px;

    .btn
        margin: 12px;

        &:active
            transform: scale(0.5)
            transition: 1s

.modalIn
    animation: modalIn .8s forwards

.modalOut
    animation: modalOut .8s forwards

@keyframes modalOut 
      0% 
        transform: translateY(5%);
      
    
      60% 
        transform: translateY(-10%);
      
      75% 
        transform: translateY(25%);
      
      100% 
        transform: translateY(-3000%);
      



@keyframes modalIn 
      0% 
        transform: translateY(-3000%);
      
      60% 
        transform: translateY(25%);
      
      75% 
        transform: translateY(-10%);
      
      90% 
        transform: translateY(5%);
      

      100% 
          transform: translateY(0)
